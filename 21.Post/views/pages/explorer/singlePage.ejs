<%- include('../../partials/head.ejs') %>
   <div class="container">
      <div class="row">
         <div class="col-md-6 offset-md-3">
            <div class="card card-body">
               <section>
                  <h3><%=post.title %></h3>

                  <div class="d-flex">
                     <small>
                        <%= moment(post.createdAt) %> ,
                        Post By <a href="/author/<%= post.author._id %> "><%= post.author.username %></a>,
                        <%= post.readTime %>
                     </small>

                     <% if(user){ %>
                        <span class="ms-auto bookmark" data-post="<%= post._id %>">
                           <% if(bookmarks.includes(post._id)){ %>
                              <i class="fas fa-bookmark"></i>
                           <% }else{ %>
                              <i class="far fa-bookmark"></i>
                           <% } %>
                        </span>
                     <% } %>
                  </div>

                  <% if(post.thumbnail){ %> 
                     <img src="<%= post.thumbnail %>" class="img-fluid my-3">
                  <% } %> 

                  <section>
                     <%- post.body %> 
                  </section>

                  <section class="my-5">
                     <% if(!user){ %> 
                     <button class="btn btn-success btn-sm" disabled>
                        Like( <%=post.likes.length %> )
                     </button>
                     <button class="btn btn-danger btn-sm" disabled>
                        Dislike( <%=post.dislikes.length %> )
                     </button>
                     <p class="text-center text-muted mt-3">To Like And Comment Please <a href="/auth/login">Login</a></p>

                     <% }else{ %> 
                        <button class="btn btn-success btn-sm" id="likeBtn" data-post="<%= post._id %>">
                           <%= post.likes.includes(user._id) ? 'Liked' : 'Like' %> (<%= post.likes.length %>)
                        </button>
                        <button class="btn btn-danger btn-sm" id="dislikeBtn" data-post="<%= post._id %>">
                           <%= post.dislikes.includes(user._id) ? 'Disliked' : 'Dislike' %> (<%= post.dislikes.length %>)
                        </button>

                        <div class="mt-5">
                           <label for="comment">Please leave A Comment</label>
                           <input type="text" id="comment" class="form-control" placeholder="Press Enter To Submit a Comment" data-post="<%= post._id %>">
                        </div>

                        <div class="mt-5" id="commentHolder">
                           <% if(post.comments.length === 0) {%> 
                              <p class="text-center text-muted">There is No Comment</p>
                           <% }else{%> 
                              <% for(let comment of post.comments.reverse()) {%> 
                                 
                                 <div class="media border">
                                    <img src="<%=comment.user.profilePics%>" class="rounded-circle mx-3 my-3" style="width: 40px;">
                                    <div class="media-body my-3">
                                       <p><%= comment.body %> </p>
                                       <div class="replies">
                                           
                                          <% if(comment.replies.length > 0) {%> 
                                             
                                             <% for(let reply of comment.replies) {%> 
                                                <div class="media mt-3">
                                                   <img src="<%= reply.user.profilePics %>" class="rounded-circle me-3 aling-self-start" style="width: 40px;">
                                                   <div class="media-body">
                                                      <p><%= reply.body %> </p>
                                                   </div>
                                                </div>
                                             <% } %> 
                                          <% } %> 
                                       </div>
                                       <div class="my-3">
                                          <input type="text" name="reply" class="form-control" placeholder="Press Enter To Reply" data-comment="<%= comment._id %>">
                                       </div>
                                    </div>
                                 </div>
                              <% } %> 
                           <% } %> 
                        </div>
                     <% } %> 
                  </section>
               </section>
            </div>
         </div>
      </div>
   </div>

<%- include('../../partials/footer.ejs') %>

